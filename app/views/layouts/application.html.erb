<!DOCTYPE html>
<html>
  <head>
    <title>Kwitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <p>
      <% if @current_user %>
        <%= @current_user["first_name"] %>
        <a href="/logout">Logout</a>
      <% else %>
        <a href="/login">Login</a> | <a href="/users/new">Signup</a>
      <% end %>
    </p>

    <p>
      <%= flash["notice"] %>
    </p>

    <%= yield %>
  </body>
</html>
