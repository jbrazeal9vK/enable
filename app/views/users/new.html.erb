<div class="container mt-5">
  <h1 class="display-4 mb-4">New User Account</h1>

  <%= form_with(model: @user, html: { class: 'mb-4' }) do |form| %>
    <div class="form-group my-3">
      <%= form.label :username, class: 'form-label' %>
      <%= form.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group my-3">
      <%= form.label :location, class: 'form-label' %>
      <%= form.select :location, options_for_select(us_states), { prompt: 'Select Location' }, class: 'form-control' %>
    </div>

    <div class="form-group my-3">
      <%= form.label :email, class: 'form-label' %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group my-3">
      <%= form.label :password, class: 'form-label' %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="my-3">
      <%= form.submit 'Sign up', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
