<body>
  <div class="container mt-5">
    <h1 class="mb-4">Reset Password</h1>

    <%= form_with(model: @user, html: { class: 'mb-4' }) do |form| %>
      <div class="form-group my-3">
        <%= form.label :email, class: 'form-label' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    <% end %>
  </div>
</body>